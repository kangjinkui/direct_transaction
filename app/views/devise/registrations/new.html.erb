<div class="page-container py-8">
  <div class="max-w-md mx-auto">
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body">
        <h2 class="card-title text-2xl justify-center mb-4">회원가입</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-control">
            <%= f.label :role, "회원 유형", class: "label" %>
            <div class="flex gap-4">
              <label class="label cursor-pointer gap-2">
                <%= f.radio_button :role, "user", checked: true, class: "radio radio-primary" %>
                <span class="label-text">소비자</span>
              </label>
              <label class="label cursor-pointer gap-2">
                <%= f.radio_button :role, "farmer", class: "radio radio-primary" %>
                <span class="label-text">농가</span>
              </label>
            </div>
          </div>

          <div class="form-control">
            <%= f.label :name, "이름", class: "label" %>
            <%= f.text_field :name, class: "input input-bordered", placeholder: "홍길동", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :email, "이메일", class: "label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered", placeholder: "example@email.com", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :phone, "연락처", class: "label" %>
            <%= f.tel_field :phone, class: "input input-bordered", placeholder: "010-1234-5678" %>
          </div>

          <div class="form-control">
            <%= f.label :password, "비밀번호", class: "label" %>
            <% if @minimum_password_length %>
              <label class="label">
                <span class="label-text-alt">최소 <%= @minimum_password_length %>자</span>
              </label>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :password_confirmation, "비밀번호 확인", class: "label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered", required: true %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit "가입하기", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider">또는</div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
