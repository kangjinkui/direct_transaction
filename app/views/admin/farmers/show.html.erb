<div class="flex items-center justify-between mb-4">
  <h1 class="text-2xl font-semibold"><%= @farmer.business_name %></h1>
  <div class="space-x-2">
    <%= link_to "목록", admin_farmers_path, class: "text-sm text-gray-700 hover:underline" %>
    <%= link_to "수정", edit_admin_farmer_path(@farmer), class: "text-sm text-blue-600 hover:underline" %>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <div class="bg-white border border-gray-200 rounded p-4">
    <h2 class="text-lg font-semibold mb-3">기본 정보</h2>
    <dl class="space-y-2 text-sm">
      <div>
        <dt class="font-medium text-gray-600">대표자</dt>
        <dd><%= @farmer.owner_name %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-600">연락처</dt>
        <dd><%= @farmer.phone %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-600">알림 방식</dt>
        <dd><%= @farmer.notification_method %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-600">승인 방식</dt>
        <dd><%= @farmer.approval_mode %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-600">농가 유형</dt>
        <dd><%= @farmer.farmer_type %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-600">현재 재고</dt>
        <dd><%= @farmer.stock_quantity %></dd>
      </div>
    </dl>
  </div>

  <div class="bg-white border border-gray-200 rounded p-4">
    <h2 class="text-lg font-semibold mb-3">계좌 정보</h2>
    <p class="font-mono text-sm bg-gray-50 border border-gray-200 rounded p-3 mb-2">
      <%= @farmer.account_info.presence || "등록되지 않음" %>
    </p>
    <p class="text-sm text-gray-600">마지막 4자리: <strong><%= @farmer.account_last4 %></strong></p>
  </div>
</div>

<div class="mt-6">
  <%= link_to "삭제",
              admin_farmer_path(@farmer),
              data: { turbo_method: :delete, turbo_confirm: "정말 삭제할까요?" },
              class: "text-red-600 hover:underline text-sm" %>
</div>
