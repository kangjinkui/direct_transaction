<div class="page-container py-8 space-y-6">
  <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
    <div>
      <h1 class="text-3xl font-bold">주문 관리</h1>
      <p class="text-sm text-base-content/70">내 농가로 들어온 주문을 관리합니다</p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to "대시보드", farmers_dashboard_path, class: "btn btn-ghost btn-sm" %>
    </div>
  </div>

  <!-- 통계 -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body p-4">
        <p class="text-xs text-base-content/70">전체</p>
        <p class="text-2xl font-bold"><%= @stats[:total] %>건</p>
      </div>
    </div>
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body p-4">
        <p class="text-xs text-base-content/70">승인 대기</p>
        <p class="text-2xl font-bold text-warning"><%= @stats[:pending] %>건</p>
      </div>
    </div>
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body p-4">
        <p class="text-xs text-base-content/70">승인 완료</p>
        <p class="text-2xl font-bold text-info"><%= @stats[:confirmed] %>건</p>
      </div>
    </div>
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body p-4">
        <p class="text-xs text-base-content/70">입금 대기</p>
        <p class="text-2xl font-bold text-secondary"><%= @stats[:payment_pending] %>건</p>
      </div>
    </div>
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body p-4">
        <p class="text-xs text-base-content/70">완료</p>
        <p class="text-2xl font-bold text-success"><%= @stats[:completed] %>건</p>
      </div>
    </div>
  </div>

  <!-- 필터 -->
  <div class="flex flex-wrap gap-2">
    <%= link_to "전체", farmers_orders_path, class: "btn btn-sm #{params[:status].blank? ? 'btn-primary' : 'btn-ghost'}" %>
    <%= link_to "승인 대기", farmers_orders_path(status: 'farmer_review'), class: "btn btn-sm #{params[:status] == 'farmer_review' ? 'btn-primary' : 'btn-ghost'}" %>
    <%= link_to "승인 완료", farmers_orders_path(status: 'confirmed'), class: "btn btn-sm #{params[:status] == 'confirmed' ? 'btn-primary' : 'btn-ghost'}" %>
    <%= link_to "입금 대기", farmers_orders_path(status: 'payment_pending'), class: "btn btn-sm #{params[:status] == 'payment_pending' ? 'btn-primary' : 'btn-ghost'}" %>
    <%= link_to "완료", farmers_orders_path(status: 'completed'), class: "btn btn-sm #{params[:status] == 'completed' ? 'btn-primary' : 'btn-ghost'}" %>
  </div>

  <!-- 주문 목록 -->
  <% if @orders.empty? %>
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body text-sm text-base-content/70">주문 내역이 없습니다.</div>
    </div>
  <% else %>
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body p-0">
        <div class="overflow-x-auto">
          <table class="table table-zebra">
            <thead>
              <tr>
                <th>주문번호</th>
                <th>상태</th>
                <th>고객</th>
                <th>연락처</th>
                <th>금액</th>
                <th>주문일시</th>
                <th class="text-right">액션</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td class="font-mono text-xs"><%= order.order_number %></td>
                  <td><%= render BadgeComponent.new(status: order.status) %></td>
                  <td><%= order.user.name %></td>
                  <td><%= order.shipping_phone %></td>
                  <td><%= number_to_currency(order.total_amount / 100.0, unit: "", precision: 0) %>원</td>
                  <td class="text-sm"><%= l(order.created_at, format: :short) %></td>
                  <td class="text-right">
                    <%= link_to "상세", farmers_order_path(order), class: "btn btn-primary btn-xs" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
