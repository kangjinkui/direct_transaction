<!-- Hero Section -->
<div class="hero bg-primary text-primary-content py-12 rounded-lg mb-8">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">농산물 직거래</h1>
      <p class="py-6">신선한 농산물을 농가에서 직접 받아보세요</p>
      <% unless user_signed_in? %>
        <%= link_to "시작하기", new_user_session_path, class: "btn btn-secondary btn-lg" %>
      <% end %>
    </div>
  </div>
</div>

<!-- Farmers List -->
<div class="mb-8">
  <h2 class="text-3xl font-bold mb-6">농가 목록</h2>

  <% if @farmers.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @farmers.each do |farmer| %>
        <%= render CardComponent.new(bordered: true) do |card| %>
          <% card.with_header do %>
            <h3 class="card-title text-xl"><%= farmer.name %></h3>
            <p class="text-sm opacity-70"><%= farmer.location %></p>
          <% end %>

          <% card.with_body do %>
            <div class="space-y-2">
              <% if farmer.products.available.any? %>
                <div class="flex items-center gap-2">
                  <span class="badge badge-success badge-sm">판매중</span>
                  <span class="text-sm opacity-70">
                    상품 <%= farmer.products.available.count %>개
                  </span>
                </div>

                <!-- 대표 상품 이미지 (첫 번째 상품) -->
                <% first_product = farmer.products.available.first %>
                <% if first_product %>
                  <div class="text-sm font-medium text-primary">
                    <%= first_product.name %> 외
                  </div>
                <% end %>
              <% else %>
                <div class="badge badge-neutral badge-sm">품절</div>
              <% end %>
            </div>
          <% end %>

          <% card.with_footer do %>
            <%= link_to "상품 보기", farmer_products_path(farmer), class: "btn btn-primary btn-sm btn-block" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>현재 등록된 농가가 없습니다.</span>
    </div>
  <% end %>
</div>
